{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NEXT_PUBLIC_*", "NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": ["NEXT_PUBLIC_*", "NODE_ENV"]
    },
    "dev:packages": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", "eslint.config.*"]
    },
    "type-check": {
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig*.json"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["$TURBO_DEFAULT$", "jest.config.*", "vitest.config.*"]
    }
  },
  "globalEnv": ["NODE_ENV", "CI", "VERCEL_ENV"],
  "globalDependencies": ["**/.env*"]
}

{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Next.js Specific */
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],

    /* Emit */
    "noEmit": true,
    "incremental": true,

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/styles/*": ["./styles/*"],
      "@/types/*": ["./types/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "dist"]
}
